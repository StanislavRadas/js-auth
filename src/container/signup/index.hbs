<div class="page page--background">
    <header>
        {{> back-button}}
    </header>
    <form class="page__section">
        <h1 class="page__title">Registration</h1>
        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" label="Email" type="email" name="email" placeholder="Email"}}
                <span name="email" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-password action="signupForm.change" label="Password" type="password" name="password" placeholder="Password"}}
                <span name="password" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-password action="signupForm.change" label="Repeat password" type="password" name="passwordAgain"
                placeholder="Password"}}
                <span name="passwordAgain" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-select action="signupForm.change" label="Role" name="role" list=data.role placeholder="Choose the role"}}
                <span name="role" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-checkbox action="signupForm.change" label="You are agree with service policy"  name="isConfirm"}}
                <span name="isConfirm" class="form__error">Error</span>
            </div>
        </div>
        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Sign Up</button>
        <span class="alert alert--disabled">Attention, Error</span>
        <span class="link__prefix">Already have account? <a href="/login" class="link">Log In</a></span>
    </form>
</div>